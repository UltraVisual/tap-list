<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - Admin</title>
  <link rel="stylesheet" href="/public/css/admin.css">
  <style>
    .theme-picker {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      margin-top: 0.5rem;
    }
    .theme-option {
      cursor: pointer;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.4rem;
    }
    .theme-option input[type="radio"] {
      display: none;
    }
    .theme-swatch {
      width: 80px;
      height: 56px;
      border-radius: 8px;
      border: 2px solid;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: outline 0.15s, transform 0.15s;
    }
    .theme-option input[type="radio"]:checked + .theme-swatch {
      outline: 3px solid var(--accent);
      outline-offset: 2px;
      transform: scale(1.05);
    }
    .theme-swatch-card {
      width: 52px;
      height: 32px;
      border-radius: 4px;
      border: 1px solid;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.3rem;
    }
    .theme-swatch-text {
      font-weight: 700;
      font-size: 0.85rem;
    }
    .theme-swatch-accent {
      font-size: 1rem;
      line-height: 1;
    }
    .theme-label {
      font-size: 0.8rem;
      font-weight: 600;
      color: var(--text);
    }
  </style>
</head>
<body>
  <div class="admin-header">
    <h1><%= settings.taproom_name %> &mdash; Settings</h1>
    <nav>
      <a href="/admin">&larr; Back to Admin</a>
      <a href="/">View Tap List</a>
    </nav>
  </div>

  <div class="container">
    <div class="form-card">
      <form method="POST" action="/admin/settings" enctype="multipart/form-data">
        <div class="form-group">
          <label for="taproom_name">Tap Room Name</label>
          <input type="text" id="taproom_name" name="taproom_name"
                 value="<%= settings.taproom_name %>" required>
        </div>

        <div class="form-group">
          <label for="logo">Logo</label>
          <input type="file" id="logo" name="logo" accept="image/*">
          <% if (settings.logo_path) { %>
            <div class="image-preview">
              <img src="<%= settings.logo_path %>" alt="Current logo" style="max-height: 80px;">
              <p style="font-size: 0.8rem; color: var(--text-muted); margin-top: 0.25rem;">Upload a new image to replace</p>
            </div>
          <% } %>
        </div>

        <div class="form-group">
          <label>Display Theme</label>
          <div class="theme-picker">
            <% const themes = [
              { id: 'dark',       label: 'Dark',       bg: '#111',    card: '#1a1a1a', border: '#2a2a2a', text: '#f0f0f0', muted: '#999',    accent: '#f5a623' },
              { id: 'light',      label: 'Light',      bg: '#f5f2eb', card: '#ffffff', border: '#e0ddd6', text: '#2c2c2c', muted: '#777',    accent: '#c8802a' },
              { id: 'chalkboard', label: 'Chalkboard', bg: '#2b3a2e', card: '#354539', border: '#445544', text: '#e8e4d8', muted: '#a0a89a', accent: '#d4a843' },
              { id: 'copper',     label: 'Copper',     bg: '#1c1210', card: '#2a1e1a', border: '#3d2e28', text: '#f0e0d0', muted: '#b09080', accent: '#cd7f32' },
              { id: 'neon',       label: 'Neon',       bg: '#0a0a14', card: '#12121f', border: '#1e1e30', text: '#e0e0ff', muted: '#8888bb', accent: '#00e5ff' },
            ]; %>
            <% themes.forEach(t => { %>
              <label class="theme-option">
                <input type="radio" name="theme" value="<%= t.id %>"
                  <%= (settings.theme || 'dark') === t.id ? 'checked' : '' %>>
                <div class="theme-swatch" style="background: <%= t.bg %>; border-color: <%= t.border %>;">
                  <div class="theme-swatch-card" style="background: <%= t.card %>; border-color: <%= t.border %>;">
                    <span class="theme-swatch-text" style="color: <%= t.text %>;">Aa</span>
                    <span class="theme-swatch-accent" style="color: <%= t.accent %>;">&#9679;</span>
                  </div>
                </div>
                <span class="theme-label"><%= t.label %></span>
              </label>
            <% }) %>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Settings</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
